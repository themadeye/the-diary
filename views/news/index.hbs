<h1>Top Headlines</h1>
<div class="row">
  {{#each news}}
    <div class="col s12 m4">
      <div class="card">
        {{!-- <div class="card-image">
          {{{editIC user ../user _id}}}
        </div> --}}
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p>{{stripTags (truncate description 100)}}</p>
          <br>
          <div class="chip">
            <a href="#">{{author}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a href="{{url}}" class="btn grey" target="_blank"> Read More </a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No News today</p>
  {{/each}}
</div>