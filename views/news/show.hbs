<h1>Top Headlines</h1>
<div class="row">
  {{#each diaries}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          {{{editIC user ../user _id}}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p>{{stripTags (truncate body 100)}}</p>
          <br>
          <div class="chip">
            <img src="{{user.image}}" alt="">
            <a href="/diaries/user/{{user._id}}">{{user.displayName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a href="/diaries/{{_id}}" class="btn grey"> Read More </a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No Diaries to show</p>
  {{/each}}
</div>