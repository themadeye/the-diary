<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Your diaries</p>

{{#if diaries}}
  <table class="strpied">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Author</th>
      </tr>
    </thead>
    <tbody>
      {{#each diaries}}
      <tr>
        <td><a href="/diaries/{{_id}}"></a>{{title}}</td>
        <td>{{formatDate createTime 'MMMM DD YYYY'}}</td>
        <td><span class="dash-status">{{user.displayName}}</span></td>
        <td>
          <a href="/diaries/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a>
          <form action="/diaries/{{_id}}" method="POST" id="delete-form"><input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn red"><i class="fas fa-trash"></i></button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have no diary right now.</p>
{{/if}}